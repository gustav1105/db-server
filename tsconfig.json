{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true, // Enabling strict mode for better type safety
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["src/*"],
      "grpc/*": ["src/grpc/*"] // Add path mapping for generated proto files
    }
  },
  "include": [
    "src/**/*",
    "src/proto/**/*",
    "generate-proto.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
